{
  "name": "social-appliance",
  "version": "1.0.0",
  "description": "Social Appliance monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client-svelte && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client-svelte && npm run build",
    "start": "NODE_ENV=production npm run server:prod",
    "server:prod": "cd server && npm start",
    "setup": "npm run setup:server && npm run setup:client",
    "setup:server": "cd server && npm install",
    "setup:client": "cd client-svelte && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
