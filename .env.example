# Server Configuration
PORT=3000
SERVERPORT=8001

# Database Configuration
DB_NAME=social_appliance

# MongoDB Connection String Examples:

# Local MongoDB without authentication
MONGODB_URI=mongodb://localhost:27017

# Local MongoDB with authentication
# MONGODB_URI=mongodb://username:password@localhost:27017/social_appliance?authSource=admin

# MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/social_appliance

# Seed Data Configuration
LOAD_SEED_DATA=true
# Path to seed data folder (relative to where server is run from)
# SEED_DATA_PATH=../seed-data

# Environment Mode (development or production)
# Set to 'production' to serve the built client files
NODE_ENV=development

# Flush db
# FLUSH_DB=true

# Authentication Configuration

# Magic.link Configuration
# Get your secret key from https://dashboard.magic.link
MAGIC_SECRET_KEY=sk_live_your_secret_key_here

# Session Secret (generate a random string for production)
SESSION_SECRET=your-secret-key-here-change-in-production

# JWT Secret (for token-based auth)
JWT_SECRET=your-jwt-secret-here-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:8000
