# Server Configuration
PORT=8000

# Client Configuration
CLIENTPORT=8001

# Database Configuration
# For MongoDB Atlas or other cloud MongoDB services, use the full connection string:
# mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017
# Replace username, password, cluster, and database_name with your actual values
MONGODB_URI=mongodb://localhost:27017
DB_NAME=social_appliance

# Authentication Secrets
# Generate secure random strings for production
JWT_SECRET=your-jwt-secret-change-in-production

# Magic.link Configuration
# Get your secret key from https://dashboard.magic.link
MAGIC_SECRET_KEY=

# Seed Data Configuration
LOAD_SEED_DATA=true
FLUSH_DB=false

# Magic.link Configuration (Client)
# Get your publishable key from https://dashboard.magic.link
VITE_MAGIC_PUBLISHABLE_KEY=

# Mapbox Configuration
# Get your access token from https://account.mapbox.com/
VITE_MAPBOX_ACCESS_TOKEN=

# API Configuration
# Leave empty to use Vite dev server proxy, or set to http://localhost:8000 for direct connection
VITE_API_BASE_URL=

# Ethereum RPC Configuration (recommended for ENS lookups)
# Get a free API key from Infura (owned by MetaMask/ConsenSys)
# Sign up at https://www.infura.io/ and create a project
VITE_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_API_KEY
